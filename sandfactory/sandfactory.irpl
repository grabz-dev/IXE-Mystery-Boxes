$SANDTOCREATE:18
$DELAY:50
$COST:0.075

Self 0 true GetOnBoardComplete not if
	return
endif

if (<-count 0 <=)
	GetAmmo(self) ->ammo
	if (<-ammo <-COST >=)
		GetPosition(self) ->pos
		GetSand(<-pos.x <-pos.y) ->sand
		#if (<-sand 255 ==)
			CreateSand(<-pos.x <-pos.y 1 - <-SANDTOCREATE)
		#endif
		<-DELAY ->count
		<-ammo <-COST - ->ammo
		SetAmmo(self <-ammo)
	endif	
else
	<-count 1 - ->count
endif	

